@page "/lamps/delete/{lampId}"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@using MySmartHomeWebApi.Models
@using MySmartHomeWebApi.Data.Interfaces
@using Client.Blazor.Data
@using WebApiClients.Repositories
@inject IEntityRepository<Lamps> repo
@inject NavigationManager NavManager

<h3>Lamp Delete</h3>

@if (lamp == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label>Name</label>
            </dt>
            <dd class="col-sm-10">
                <input @bind=@lamp.Name />
            </dd>
            <dt class="col-sm-2">
                <label>Status</label>
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" @bind=@lamp.Status />
            </dd>
            <dt class="col-sm-2">
                <label>Topic Up</label>
            </dt>
            <dd class="col-sm-10">
                <input @bind=@lamp.TopicUp />
            </dd>
            <dt class="col-sm-2">
                <label>Topic Down</label>
            </dt>
            <dd class="col-sm-10">
                <input @bind=@lamp.TopicDown />
            </dd>
            <dt class="col-sm-2">
                <label>Room Name</label>
            </dt>
            <dd class="col-sm-10">
                <input @bind=@lamp.RoomName />
            </dd>
        </dl>
        <button class="btn btn-primary" @onclick="EditLamp">Delete</button>
    </div>
}
<div>
    <a href="lamps">Back to List</a>
</div>

@code {

    Lamps? lamp;

    [Parameter]
    public string? lampId { get; set; }
    private Guid _id;

    protected override async Task OnInitializedAsync()
    {
        _id = Guid.Parse(lampId!);
        lamp = await repo.GetById(_id);
    }

    protected async Task EditLamp()
    {
        lamp = await repo.DeleteById(_id);
        NavManager.NavigateTo("/lamps");
    }
}
