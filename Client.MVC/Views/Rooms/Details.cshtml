@model MySmartHomeWebApi.Models.Rooms

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rooms</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lamps)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var item in Model.Lamps)
            {
                <div>
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sensors)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Sensors)
            {
                <div>
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
